<String.type
  xmlns:rule="class:/spiralcraft/rules/"
  >
  <rules>
    <rule:PatternRule>
      <ignoreNull>true
      </ignoreNull>
      <regex>\b[a-zA-Z0-9._%+-]+@[a-zA-Z0-9.-]+\.[a-zA-Z]+\b
      </regex>
      <message>Email address must be valid.
      </message>
    </rule:PatternRule>
  </rules>

</String.type>